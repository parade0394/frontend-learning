{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "proseWrap": "preserve",
  "plugins": ["prettier-plugin-organize-attributes"],
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 120,
        "attributeGroups": [
          "^(id|name)$",
          "^class$",
          "^(type|value|placeholder|required|disabled|readonly)$",
          "^(src|href|alt|title)$",
          "^data-",
          "^aria-",
          "$DEFAULT"
        ]
      }
    },
    {
      "files": "*.css",
      "options": {
        "printWidth": 100,
        "singleQuote": false
      }
    }
  ]
}
