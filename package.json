{
  "name": "frontend-learning",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "description": "前端学习中心 - CSS 动画、Grid、SVG 等交互式教程",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "build:analyze": "vite build --mode analyze",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "lint:js": "eslint \"**/*.{js,html}\"",
    "lint:js:fix": "eslint \"**/*.{js,html}\" --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run format",
    "commit": "cz",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{html,css,js,json,md}": [
      "prettier --write"
    ],
    "*.{js,html}": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-html": "^8.1.3",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.27.0",
    "vite": "^5.4.21"
  }
}
